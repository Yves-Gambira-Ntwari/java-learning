package gambira_24rp05514.itlevel6y2_b.nestedloop;
import java.util.Scanner;

public class StarPatterns {

	public StarPatterns() {
		// TODO Auto-generated constructor stub
	}

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		System.out.println("-----------------------MENU---------------------------");
		System.out.println("1. Solid rectangel");
		System.out.println("2. Right hallowed triangle");
		System.out.println("3. Inverted left-aligned triangle");
		System.out.println("4. Left aligned triangle");
		System.out.println("5. Inverted right-aligned triangle");
		System.out.println("6. right-aligned triangle");
		System.out.println("-----------------------MENU---------------------------");
		Scanner sc = new Scanner(System.in);
		int choice = sc.nextInt();

		switch(choice) {
		case 1:
			System.out.println("1. Solid rectangel ");
			System.out.print("Enter number to check the output: ");
			int num = sc.nextInt();
			for(int i = 0; i<=num; i++) {
				for(int j = num; j>=0; j--) {				
					System.out.print("*");
				}
				System.out.println(" ");
			}
			System.out.println();
			
		break;
		case 2:
			System.out.println("2. Right aligned hallow triangle");
			System.out.print("Enter number to check the output: ");
			int num = sc.nextInt();
			int hole = 1;
			for(int i = 1; i<=num; i++) {
				for(int j = num; j>0; j--) {
					if(j == i || j == 1) {					
						System.out.print("*");
					} else {
						System.out.print(" ");
						
					}
				}
				System.out.println(" ");
				hole++;
			}
		break;
		case 3:
			System.out.println("3. Inverted left aligned triangle");
			System.out.print("Enter number to check the output: ");
			int num = sc.nextInt();
			for(int i = 0; i<=num; i++) {
				for(int j = i; j<=num; j++) {				
					System.out.print("*");
				}
				System.out.println(" ");
			}
		break;
		case 4:
			System.out.println("4. left aligned triangel");
			System.out.print("Enter number to check the output: ");
			int num = sc.nextInt();
			for(int i = 0; i<=num; i++) {
				for(int j = 0; j<=i; j++) {				
					System.out.print("*");
				}
				System.out.println(" ");
			}
			System.out.println(" ");
			
			System.out.println();
		break;
		case 5:
			System.out.println("5. Right inverted aligned triangle");
			System.out.print("Enter number to check the output: ");
			int num = sc.nextInt();
			int hole1 = num;
			for(int i = 0; i<=num; i++) {
				for(int j = num; j>0; j--) {
					if(j <= hole1) {					
					System.out.print("*");
					} else {
						System.out.print(" ");
						
					}
				}
				System.out.println(" ");
				hole1--;
			}
		break;
		case 6:
			System.out.println("6. Right aligned triangle");
			System.out.print("Enter number to check the output: ");
			int num = sc.nextInt();
			int hole2 = 1;
			for(int i = 0; i<=num; i++) {
				for(int j = num; j>0; j--) {
					if(j < hole2) {					
						System.out.print("*");
					} else {
						System.out.print(" ");
						
					}
				}
				System.out.println(" ");
				hole2++;
			}
		break;
		default:
			System.out.println("Please check the menu and try again");
			
		}

		

		
		


	}

}
